<body>
    <!-- Top Header Start -->
    <div class="top-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <div class="logo">
                        <a href="">
                            <img src="~/Content/img/logo.png" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="search">
                        <input type="text" placeholder="Search">
                        <button><i class="fa fa-search"></i></button>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="user">
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account</a>
                            <div class="dropdown-menu">
                                <a href="~/Home/Login" class="dropdown-item">Login</a>
                                <a href="~/Home/Login" class="dropdown-item">Register</a>
                            </div>
                        </div>
                        <div class="cart" style="cursor: pointer; ">
                            <img src="~/Content/img/vi.png" alt="Logo">
                         </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Top Header End -->
    <!-- Header Start -->
    <div class="header">
        <div class="container">
            <nav class="navbar navbar-expand-md bg-dark navbar-dark">
                <a href="#" class="navbar-brand">MENU</a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav m-auto">
                        <a href="~/Home/Index" class="nav-item nav-link active">Home</a>
                        <a href="~/Home/Product" class="nav-item nav-link">Products</a>
                        <div class="nav-item dropdown">
                            <a href="~/Home/Product" class="nav-link dropdown-toggle" data-toggle="dropdown">Categories</a>
                            <div class="dropdown-menu">
                                <a href="~/Home/Product" class="dropdown-item">Chemical</a>
                                <a href="#" class="dropdown-item">Stationery</a>
                                <a href="#" class="dropdown-item">Construction</a>
                                <a href="#" class="dropdown-item">3D printing</a>
                                <a href="#" class="dropdown-item">Led light</a>
                                <a href="#" class="dropdown-item">Labor Protection</a>
                                <a href="#" class="dropdown-item">Electronics</a>
                                <a href="~/Home/CartList" class="dropdown-item">CartList</a>
                                <a href="~/Home/MyAccount" class="dropdown-item">MyAccount</a>

                            </div>
                        </div>
                        <a href="~/Home/contact" class="nav-item nav-link">Contact Us</a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Header End -->

    @RenderBody()
    <!-- Footer Start -->
    <div class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h1>Isu Vina</h1>
                        <p>
                            To create the best space with technology and beauty, ISU VINA constantly strive to manage construction technology and work effictively.
                            We provides soft landing support for enterprises in Vietnam on a pracical level based on years of experience in construction in Vietnam.

                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h3 class="title">Useful Pages</h3>
                        <ul>
                            <li><a href="#">Product</a></li>
                            <li><a href="#">Product Detail</a></li>
                            <li><a href="#">Construction</a></li>
                            <li><a href="#">3D Printing</a></li>
                            <li><a href="#">Login & Register</a></li>
                            <li><a href="#">My Account</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
